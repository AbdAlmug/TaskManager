@{
    ViewData["Title"] = "Email Sent";
    Layout = "_AccountLayout";
}

<div class="accoount-container">
    <div class="account-box">
        <h2 class="text-center mb-4">Email Send</h2>
        <p class="text-center">A verification email has been sent to your email address. Please check your inbox and follow the instructions to verify your email.</p>
        <div class="text-center mt-2">
            <a asp-controller="Account" asp-action="Login" class="text-decoration-none mt-3">Back to Login</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }
}